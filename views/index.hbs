<h1>{{title}}</h1>

<p>Add a stream end point</p>
<form class="form-inline" action="/addstream" method="post">
  <div class="form-group">
    <label for="streamId">Stream Id</label>
    <input type="text" class="form-control" id="streamId" name="id" placeholder="Stream Id">
  </div>
  <div class="form-group">
    <label for="streamName">Stream Name</label>
    <input type="text" class="form-control" id="streamName" name="name" placeholder="Stream Name">
  </div>
  <button type="submit" class="btn btn-default">Add</button>
</form>

<h2>Streams <a href="/streamstop" class="btn btn-default btn-danger">Stop All</a></h2>


<table class="table">
  <tr><th>Id</th><th>Name</th><th>Status</th><th>Actions</th></tr>
{{#each streams as |value key|}}
  <tr {{#if value.playing}}class="success"{{/if}}>
    <td>{{value.id}}</td>
    <td>{{value.name}}</td>
    <td>
      {{#if value.playing}}
        Playing
      {{else}}
        Stopped
      {{/if}}
    </td>
    <td>
      <a href="/stream/{{value.id}}" class="btn btn-default btn-success" {{#if value.playing}}disabled="disabled"{{/if}}>Play</a>
      <a href="/removestream/{{value.id}}" class="btn btn-default btn-warning" {{#if value.playing}}disabled="disabled"{{/if}}>Delete</a>
    </td>
  </tr>
{{/each}}
</table>
